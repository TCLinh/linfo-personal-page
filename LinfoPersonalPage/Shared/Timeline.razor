@using MudBlazor
@using Model


<MudTimeline>
    @foreach (var workExp in workExperience)
    {
        @if (workExp != null)
        {
            <MudTimelineItem Color="Color.Warning">
                <ItemOpposite>
                    <MudText Typo="Typo.h5">@workExp.start_time - @workExp.end_time</MudText>
                </ItemOpposite>
                <ItemContent>
                    <MudText Typo="Typo.h6" GutterBottom="true">@workExp.company_name</MudText>
                    <MudText>@workExp.work_description</MudText>
                </ItemContent>
            </MudTimelineItem>
        
        }
        
    }
    
</MudTimeline>

@code {
    [Parameter]
    public List<WorkExperienceModel> workExperience { get; set; } = new List<WorkExperienceModel>();

}
